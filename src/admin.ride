@Callable(i)
func activate(v: Boolean) = {
    if((i.caller == this))
      then [BooleanEntry("activate", v)]
    else throw("Only the Admin itself can invoke this function")
}

@Callable(i)
func addSwap(address: String, asset1: String, asset2: String, staker: String) = {
    let PMAA = getString(this, address)
    if((i.caller == this))
      then if(isDefined(PMAA))
        then throw("The address for this swap has been previously added.")
        else [StringEntry(a1 + address, asset1), StringEntry(a2 + address, asset2), StringEntry(address, staker), StringEntry(st+staker,address)]
    else throw("Only the Admin itself can invoke this function")
}

@Callable(i)
func removeSwapOrPool(address: String, SwapOrPool: Boolean) = {
  let PMAA = getStringValue(this, address)
  if((i.caller == this))
    then if(isDefined(PMAA))
     then if(SwapOrPool)
      #if  is swap
      then [DeleteEntry(a1+address),DeleteEntry(a2+address),DeleteEntry(address),DeleteEntry(st+PMAA)]
      #if is pool
      else {
        let prai = getStringValue(sst+address)
        let bbentry = [DeleteEntry(sst+address),DeleteEntry(l+prai), DeleteEntry(address), DeleteEntry(st+PMAA), DeleteEntry(aa1+address), DeleteEntry(aa2+address)]
        bbentry
      }
     else throw("The address for this 'supposed' swap/pool was not found!")
  else throw("Only the Admin itself can invoke this function")
}

@Verifier(tx)
func verify() = match tx {
    case _ => 
        sigVerify(tx.bodyBytes, tx.proofs[0], tx.senderPublicKey)
}
